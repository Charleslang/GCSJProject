<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.user.dao.OrderDao">

    <insert id="insertOrder" parameterType="com.itheima.user.dto.InsertOrderDTO" useGeneratedKeys="true" keyProperty="orderId">
        insert into
        tb_order(pay_price,order_time,pay_time,order_status,user_id,user_type,user_nickname,user_addr,goods_image,store_name)
        values
        (null,now(),null,0,#{userId},#{userType},#{userNickname},#{userAddr},#{goodsImage},#{storeName})
    </insert>

    <update id="updateOrderStatus" parameterType="com.itheima.user.dto.UpdateOrderDTO">
        update tb_order set pay_price=#{payPrice},pay_time=now(),order_status=1 where order_id=#{orderId}
    </update>

</mapper>